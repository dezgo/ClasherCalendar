<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	tools:context="com.derekgillett.clashercalendar.MainActivity" 
	>
    
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        />
    
    <!-- The navigation drawer -->
    <GridLayout android:id="@+id/left_drawer"
        android:layout_width="240dp"
	    android:columnCount="2"
	    android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        >
	
	   	<CheckBox 
		    android:id="@+id/chkMaxed"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    />
		
		<TextView 
		    android:id="@+id/text1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="1dp"
		    android:paddingRight="1dp"
		    android:text="Defensive Buildings"
		    />
	
	   	<CheckBox 
		    android:id="@+id/chkMaxed2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    	/>
	   	
		<TextView 
		    android:id="@+id/text2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="1dp"
		    android:paddingRight="1dp"
		    android:text="Resource Buildings"
		    />
	    
    </GridLayout>
</android.support.v4.widget.DrawerLayout>
